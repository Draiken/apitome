<section class="params">
  <h3>Parameters</h3>
  <div class="table-responsive">
    <table class="table table-bordered">
      <tr>
        <% param_headers(params).each do |title| %>
          <th><%= title %></th>
        <% end %>
      </tr>
      <% params.each do |param| %>
        <tr class="<%= param['required'] ? 'required' : 'optional' %>">
          <td class="name">
            <% if param['scope'] %>
              <%= "#{param['scope']}[#{param['name']}]" %>
            <% else %>
              <%= param['name'] %>
            <% end %>
          </td>
          <td class="description"><%= param['description'] %><%= ' (optional)' unless param['required'] %></td>
          <% param_extras(params).each do |extra| %>
            <td class="extra"><%= param[extra] %></td>
          <% end %>
        </tr>
      <% end %>
    </table>
  </div>
</section>
